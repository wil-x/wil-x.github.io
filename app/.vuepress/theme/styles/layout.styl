.container
  height 100vh
  min-width $minWidth
  overflow-y auto

.flex-row
  display flex
  flex-direction row

.flex-col
  display flex
  flex-direction column

.row-center
  justify-content center

.col-center
  align-items center

.space-around
  justify-content space-around

.space-between
  justify-content space-between

.clearfix::after
  display block
  content ''
  clear both
